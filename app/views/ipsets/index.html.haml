.container
  %h2
    %b WAF IPSets
  %table.table
    %tr
      %th Name
      %th ID
      %th CIDR
    - @ipsets.each do |ip_set|
      %tr
        %td= link_to ip_set[:name], ipset_path(ip_set[:id])
        %td= ip_set[:id]
        %td= ip_set[:cidr].first.value if ip_set[:cidr].any?

  %hr
  %div{:align => "right"}
    = link_to 'Add ipset', new_ipset_path, class: 'btn btn-success'
